extends layout

block content
  h1 #{title}: #{genre.name}

  if books.length

    p #[strong Remove the genre from the following copies before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Books

      dl
      each val in books
        dt
          a(href=val.url) #{val.id}
        dd #{val.title}

  else
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') Delete